[program:gunicorn]
command=/home/ubuntu/.virtualenvs/{{ application_name }}/bin/gunicorn {{ application_name }}.wsgi -c %(here)s/gunicorn_conf.py
directory=%(here)s/../../
;user=nobody
numprocs=1
stdout_logfile={{ LOG_DIR }}/gunicorn.log
stderr_logfile={{ LOG_DIR }}/gunicorn.log
autostart=true
autorestart=true
startsecs=10
loglevel=DEBUG
